{
  "manifest_version": 3,
  "name": "ES6 modules",
  "description": "Chrome extension using ES6 modules",
  "version": "0.1",
  "action": {
    "default_popup": "/popup/popup.html"
  },
  "background": {
    "service_worker": "/background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "/content/content.js"
      ],
      "type": "modal"
    }
  ],
  "permissions": [
    "scripting",
    "activeTab",
    "tabs",
    "nativeMessaging"
  ],
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": ["content/*"]
    }
  ]
}