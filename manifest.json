{
  "manifest_version": 3,
  "name": "ES6 modules",
  "description": "Chrome extension using ES6 modules",
  "version": "0.1",
  "action": {
    "default_popup": "/popup/popup.html"
  },
  "background": {
    "service_worker": "/background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "file://*/*"
      ],
      "js": [
        "/content/content.js"
      ]
    }
  ],
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content-main.js",
        "content-module.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*",
        "file://*/*"
      ]
    }
  ]
}